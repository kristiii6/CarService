@page
@model CarService.Pages.Services.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editor</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.ServiceId" />
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Description" class="control-label"></label>
                <input asp-for="Service.Description" class="form-control" />
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Price" class="control-label"></label>
                <input asp-for="Service.Price" class="form-control" />
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.RoomID" class="control-label">Room</label>
                <select asp-for="Service.RoomID" class="form-control" asp-items="ViewBag.RoomID">
                </select>
                <span asp-validation-for="Service.RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach(var gr in Model.AssignedGrouptDataList)
                                {
                                    if(cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                    <input type="checkbox"
                                    name="selectedGroups"
                                    value="@gr.GroupID"
                                    @(Html.Raw(gr.Assigned ? "checked=\"checked\"" : ""))/>
                                    @gr.GroupID @: @gr.Name
                                    @:</td>
                                }
                                @:</tr>
                            }
                  
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la toata lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
